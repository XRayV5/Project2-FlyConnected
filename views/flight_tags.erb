<h2>You have <%=@myFlights.count%> Tagged Flights</h2>
<div class="arpt_tab">
    <table>
      <thead>
        <tr>
          <th scope="col">Flight Number</th>
          <th scope="col">Origin</th>
          <th scope="col">Destination</th>
          <th scope="col">Schedule</th>
          <th scope="col">ManageTag</th>
        </tr>
      </thead>
      <tbody>

    <%@myFlights.each do |flight|%>
          <%= "<tr>
                <td>
                  <strong class='book-title'>#{flight['ident']}</strong>
                </td>
                <td>
                  <strong class='book-title'>#{flight['origin']}</strong>
                </td>
                <td><strong class='book-title'>#{flight['destination']}</strong></td>
                <td class='item-qty'><a href='/flt_filter?flt_code=#{flight['ident']}'>Check Flight Schedule</a></td>
                <td class='item-qty'><a href='/flight_untag/#{flight['id']}'>Remove</a></td>
              </tr>"%>
        <%end%>
      </tbody>
</table>
</div>
