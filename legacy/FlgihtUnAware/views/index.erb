<h1>Flight Ray-Dare</h1>

<div class="search">
  <form action="/arpt_filter" method="get">
    <fieldset>
       <legend>Search Airport</legend>
       <p>
          <label>Select Search Option</label>
          <select id = "search_opt">
            <option value = "country">Country</option>
            <option value = "Airline">Airline</option>
            <option value = "icao">ICAO</option>
            <!-- <option value = "orgin">three</option>
            <option value = "destination">four</option> -->
          </select>
          <input type="text" name="query">
       </p>
       <p>

       </p>
    </fieldset>
  </form>
</div>

<div class="arpt_tab">
    <table>
      <thead>
        <tr>
          <th scope="col">Airport/City</th>
          <th scope="col">Country</th>
          <th scope="col">ICAO</th>
          <th scope="col">Timezone</th>
          <th scope="col">Detail</th>
        </tr>
      </thead>
      <tbody>

    <%@airports.each do |airport|%>
          <%= "<tr>
                <td>
                  <strong class='book-title'>#{airport['name']}</strong>
                  <span class='text-offset'>#{airport['city']}</span>
                </td>
                <td class='item-stock'>#{airport['country']}</td>
                <td class='item-qty'>#{airport['icao']}</td>
                <td class='item-stock'>#{airport['timezone']}</td>
                <td class='item-qty'><a href='/arpt_detail/#{airport.id}'>Detail</a></td>
              </tr>"%>
        <%end%>
      </tbody>
</table>
</div>











